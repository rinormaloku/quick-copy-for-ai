{
  "name": "quick-copy-for-ai",
  "displayName": "quick-copy-for-ai",
  "description": "Quick Copy file contents to build Context For AI",
  "version": "1.0.0",
  "publisher": "RinorMaloku",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-for-ai.copyForAI",
        "title": "Copy for AI"
      },
      {
        "command": "copy-for-ai.copyFileTreeForAI",
        "title": "Copy for AI: File Tree"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copy-for-ai.copyForAI",
          "group": "5_cutcopypaste",
          "when": "explorerResourceIsFolder || explorerResourceIsFile"
        },
        {
          "command": "copy-for-ai.copyFileTreeForAI",
          "group": "5_cutcopypaste",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/tmp": "^0.2.6",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "glob": "^8.1.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "ignore": "^5.2.4",
    "tmp-promise": "^3.0.3"
  }
}
